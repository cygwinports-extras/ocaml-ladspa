inherit ocaml

NAME="ocaml-ladspa"
VERSION=0.1.4
RELEASE=2
CATEGORY="Libs"
SUMMARY="OCaml LADSPA bindings"
DESCRIPTION="This package contains an OCaml interface for LADSPA audio plugins."
REQUIRES="ladspa-sdk"
HOMEPAGE="http://savonet.sourceforge.net/"
SRC_URI="mirror://sourceforge/savonet/${NAME}-${VERSION}.tar.gz"

src_compile() {
	lndirs
	cd ${B}
	cygconf
	cygmake -j1
}
